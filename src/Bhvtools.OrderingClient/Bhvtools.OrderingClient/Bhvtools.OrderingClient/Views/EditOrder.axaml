<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Bhvtools.OrderingClient.Views"
             xmlns:viewModels="clr-namespace:Bhvtools.OrderingClient.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:EditOrderViewModel"
             x:Class="Bhvtools.OrderingClient.Views.EditOrder">
    <Border>
        <DockPanel LastChildFill="True">
            <views:CatalogCategories DockPanel.Dock="Top" DataContext="{Binding Catalog}"/>
            <views:CatalogItems DataContext="{Binding Catalog.SelectedCategory}" />
        </DockPanel>
    </Border>
</UserControl>
